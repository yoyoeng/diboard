
<h3>新規投稿</h3>
<%= form_for @movie do |f| %>
   <div class="field">
      <%= f.label :作品のタイトル　%>
      <%= f.text_field :title, size:140 %>
    </div>
    <div class="field">
      <%= f.label :ストーリー　%>
      <%= f.text_field :sentence, size:140 %>
    </div>
    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    <div class="field">
        <%= f.label :国 %>
        <%= f.collection_select :country_id, Country.all, :id, :name, include_blank: "選択して下さい" %>
    </div>
    <div class="field">
        <%= f.label :視聴サイト %>
        <%= f.collection_select :site_id, Site.all, :id, :name, include_blank: "選択して下さい" %>
    </div>
    <%= f.submit "投稿" %>
<% end %>

