
<header>
  <div class="header-list">
   <h1>diboard</h1>
   <ul>
    <li><%= link_to "ホーム", movies_path %></li>
    <li><%= link_to "新規投稿", new_movie_path %></li>
    <% if user_signed_in? %>
      <li><strong><%= link_to "マイページ", user_path(current_user.id) %></strong>
      
    <% else %>
      <li><%= link_to 'ログイン', new_user_session_path %>
    <% end %>
   </ul>
  </div>
</header>

<div class="new-movie">
   
  <%= form_for @movie do |f| %>
    <h1 id="logpage">新規投稿</h1>
    <div class="field">

        <%= f.text_field :title, placeholder:"タイトル", class:"movie"%>
      </div>
      <div class="field">
        <%= f.text_area :sentence, placeholder:"ストーリー" %>
      </div>
      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
      <div class="field">
        <%= f.collection_select :country_id, Country.all, :id, :name, include_blank: "国を選択して下さい" %>
      </div>
      <div class="field">
          <%= f.collection_select :site_id, Site.all, :id, :name, include_blank: "サイトを選択して下さい" %>
      </div>
      <%= f.submit "投稿", class:"new　movie-botton" %>
  <% end %>
</div>